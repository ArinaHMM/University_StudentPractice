<Page x:Class="University_StudentPractice.Pages.GuestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:University_StudentPractice.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Background="White"
      Title="GuestPage">

    <Grid>
        <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Center">
            <StackPanel >
            <DataGrid Name="DisciplineDataGrid" AutoGenerateColumns="False">
                <DataGrid.Columns >
                        <DataGridTextColumn MinWidth="300"  x:Name="NameDiscipline" Header="Наименование дисциплины"   Binding="{ Binding Discipline.Name }" />

                    </DataGrid.Columns>
            </DataGrid>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

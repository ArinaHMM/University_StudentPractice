<Page x:Class="University_StudentPractice.Pages.Authorizate"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:University_StudentPractice.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Background="White"
      Title="Authorizate">

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock  Margin="40" FontWeight="Bold">Выберите свою РОЛЬ</TextBlock>
            <ComboBox x:Name="RoleCmb" Width="100" Margin="10">
                <ComboBoxItem>Учитель</ComboBoxItem>
                <ComboBoxItem>Заведующий кафедры</ComboBoxItem>
                <ComboBoxItem>Инженер</ComboBoxItem>
            </ComboBox>
            <PasswordBox x:Name="PasswordAuth" Width="70"></PasswordBox>
            <TextBlock HorizontalAlignment="Center" FontWeight="Bold">Введите пароль</TextBlock>
            <Button Margin="0 0 0 6" Name="EnterBtn" Click="EnterBtn_Click">Войти</Button>
            <Button Margin="0 0 0 0" Name="GuestBtn" Click="GuestBtn_Click" >Войти как гость</Button>
        </StackPanel>
</Page>


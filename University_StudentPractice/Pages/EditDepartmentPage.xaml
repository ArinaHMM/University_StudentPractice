<Page x:Class="University_StudentPractice.Pages.EditDepartmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:University_StudentPractice.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditDepartmentPage">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock>Факультет</TextBlock>
            <ComboBox Name="FacultyCb" Width="200" Text="{Binding Cathedra.Faculty}"  />

            <TextBlock>Название:</TextBlock>
            <TextBox Name="Nametb" Width="200"  />
            <Button Width="200" Content="Сохранить изменения" Name="SaveChangesButton" Click="SaveChangesButton_Click" />
        </StackPanel>
    </Grid>
</Page>
